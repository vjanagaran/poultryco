{
  "name": "poultryco-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PoultryCo - Professional networking platform for the global poultry industry",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "mobile": "npm run dev --workspace=@poultryco/mobile",
    "web": "npm run dev --workspace=@poultryco/web",
    "admin": "npm run dev --workspace=@poultryco/admin"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.4"
}


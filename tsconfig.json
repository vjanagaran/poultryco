{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@poultryco/design-system": ["./packages/design-system/src"],
      "@poultryco/ui": ["./packages/ui/src"],
      "@poultryco/shared-api": ["./packages/shared-api/src"],
      "@poultryco/types": ["./packages/types/src"],
      "@poultryco/utils": ["./packages/utils/src"],
      "@poultryco/config": ["./packages/config/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".expo"]
}

